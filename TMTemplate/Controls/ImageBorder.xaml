<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="userControl"
	mc:Ignorable="d"
	x:Class="TMTemplate.ImageBorder"
	Width="100" Height="100" Background="Red">
    <Grid x:Name="LayoutRoot">
        <Path x:Name="path" Fill="{Binding Background, ElementName=userControl}"
		UseLayoutRounding="False" StrokeThickness="0"/>
    </Grid>
</UserControl>